{
    "name":        "evanwashkow/php-libraries",
    "description": "Foundational shared libraries for PHP",
    "autoload": {
        "files": [
            "src-php/Functions.php"
        ],
        "psr-4": {
            "EvanWashkow\\PhpLibraries\\": "src/",
            "EvanWashkow\\PhpLibraries\\Tests\\": "tests/",
            "PHP\\": "src-php/",
            "PHP\\Tests\\": "tests-php/"
        }
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7",
        "nunomaduro/phpinsights": "^2.4"
    },
    "authors": [
        {
            "name":  "Evan Washkow",
            "email": "epwashkow@gmail.com",
            "role":  "Developer"
        }
    ],
    "license": "GPL-3.0-or-later",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
